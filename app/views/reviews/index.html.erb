<div class="container">
	<div class="card">
		<div class="card-block">
		<%= paginate @reviews %>
			<% @reviews.each do |review| %>
				<h2 class="card-title"><%= link_to review.full_name, review_path(review.id) %></h2><hr>
				<h4>Service: <%= review.service_purchased %></h4>
				<p><%= review.body %></p>
				<h5>Rating: <%= review.rating %> Out Of 5<h5>
				<%= link_to review.status, toggle_status_review_path(review) %>
			<% end %>	
		<%= paginate @reviews %>
		</div>
	</div>
	<%= link_to "Leave A Review", new_review_path, class: "btn btn-primary" %>
</div>
