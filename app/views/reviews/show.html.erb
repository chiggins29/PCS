<div class="container">
	<div class="card">
		<div class="card-block">
			<h2><%= @review.full_name %></h2><hr>
			<h4>Service: <%= @review.service_purchased %></h4>
			<p><%= @review.body %></p>
			<h5>Rating: <%= @review.rating %> Out Of 5</h5>
			<%= link_to "Delete Review", @review, method: :delete, data: {confirm: "Are you sure you want to delete this review?"} if logged_in?(:admin) %>
		</div>
	</div>
</div>