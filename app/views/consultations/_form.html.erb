<%= form_for @consultations do |f| %>
	  
	<div class="form-group">
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
  </div>

	<div class="form-group">
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

	<div class="form-group">
    <%= f.text_field :number, class: 'form-control', placeholder: 'Phone Number' %>
  </div>

  <div class="form-group">
    <%= f.label :state, "To ensure we contact you at an appropriate time, please give a general location" %>
    <%= f.text_field :state, class: 'form-control', placeholder: 'City & State / Province & Territory' %>
  </div>

   <div class="form-group">
    <%= f.text_field :country, class: 'form-control', placeholder: 'Country' %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: "10", placeholder: 'What can we help you with today?' %>
  </div>

  <div class="form-group">
    <%= f.submit "Get your Consultation", class: 'btn btn-primary btn-lg consultations-button' %>
  </div>

<% end %>